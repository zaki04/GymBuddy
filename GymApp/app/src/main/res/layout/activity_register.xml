<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.toby.gymapp.RegisterActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btnSignUp"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="385dp"
        android:layout_height="57dp"
        android:background="@color/GymBuddyRed"
        android:fontFamily="@font/montserrat"
        android:text="Register"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="556dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:fontFamily="@font/montserrat"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="127dp" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:fontFamily="@font/montserrat"
        android:hint="Date of Birth"
        android:inputType="textPersonName|date"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="181dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:fontFamily="@font/montserrat"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="233dp" />

    <EditText
        android:id="@+id/editTextEmailConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:fontFamily="@font/montserrat"
        android:hint="Confirm E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="285dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:fontFamily="@font/montserrat"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="352dp" />

    <EditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:fontFamily="@font/montserrat"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="406dp" />

    <CheckBox
        android:id="@+id/checkBoxAgreedConditions"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:focusableInTouchMode="true"
        android:text="I agree to Gym Buddy's terms and conditions"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="478dp" />

    <ProgressBar
        android:id="@+id/progressBarRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="306dp" />

    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="101dp"
        android:background="@color/GymBuddyRed"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat"
            android:text="Create account"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="31dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
